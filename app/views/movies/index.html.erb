<h2>All Movies</h2>

<%#  Part 1: Start here... %>

<%#  Section for Part 2 %>

<%= form_tag movies_path, :id=> "ratings_form", :method=> :get do %> 
  
  <h4>
    Include: 
    <% @all_ratings.each do |rating| %>
      <%= rating %>
      <%= check_box_tag "ratings[#{rating}]", '', if @ratings_checks; @ratings_checks.include?(rating) end, id:"ratings_#{rating}" %>
    <% end %>
    
    <%= submit_tag 'Refresh', :class => 'btn btn-primary', id:"ratings_submit" %>
  </h4>
<% end %>


<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th>
        <%= link_to "Movie Title", params.merge(:sort_by=>"title"), :class => ("hilite" if session[:sort_by] == "title"), id:"title_header" %>
      </th>
      <th>Rating</th>
      <th>
        <%= link_to 'Release Date', params.merge(:sort_by=>"release_date"), :class => ("hilite" if session[:sort_by]=="release_date"), id:'release_date_header' %>
      </th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
